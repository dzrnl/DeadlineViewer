<idea-plugin>
    <id>com.dzrnl.deadline-viewer</id>
    <name>Deadline Viewer</name>
    <version>0.1.0</version>

    <vendor email="moa_pochta_777@mail.ru" url="https://github.com/dzrnl">Dzrnl</vendor>

    <description><![CDATA[
    Provides support for My Framework.
    The support includes:
    <ul>
        <li>code completion</li>
        <li>references</li>
    </ul>
    For more information visit the
    <a href="https://example.com">project site</a>.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.json</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.dzrnl.deadlineviewer.Settings"/>
    </extensions>

    <actions>
        <group id="DeadlineViewer" text="Deadlines">
            <add-to-group group-id="MainMenu" anchor="before" relative-to-action="HelpMenu"/>
            <action id="com.dzrnl.deadlineviewer.AddDeadlineAction" class="com.dzrnl.deadlineviewer.AddDeadlineAction"
                    text="Add Deadline" description="Add deadline to the list of deadlines"/>
            <action id="com.dzrnl.deadlineviewer.ShowDeadlinesAction" class="com.dzrnl.deadlineviewer.ShowDeadlinesAction"
                    text="Show Deadlines" description="Show all current deadlines"/>
        </group>
    </actions>
</idea-plugin>